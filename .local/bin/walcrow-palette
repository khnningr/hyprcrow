#!/bin/bash

set -euo pipefail

# Revisa el argumento correcto.
if [ "$#" -ne 1 ]; then
  echo "Usa: $0 «RUTA/AL/WALLPAPER»"
  exit 1
fi

# Verifica si swww-daemon se encuentra.
verificar_swww_daemon() {
  pgrep swww-daemon > /dev/null || swww-daemon &
}
verificar_swww_daemon

IMAGEN="$1"

if [ "$IMAGEN" == "--random" ]; then
  DIR_WALL="$HOME/Wallpapers"
  IMAGENES=($(ls "$DIR_WALL"))
  IMAGEN_ALEATORIA="${IMAGENES[$RANDOM % ${#IMAGENES[@]}]}"
  IMAGEN="${DIR_WALL}/${IMAGEN_ALEATORIA}"
  notify-send "Tema aleatorio" "Imagen '${IMAGEN_ALEATORIA}' seleccionada."
fi

verificar_comando() {
  local PAQUETE="$1"
  command -v "$PAQUETE" > /dev/null 2>&1 || { notify-send "Ejecución detenida" "Paquete $PAQUETE no instalado."; exit 1; }
}
verificar_comando swww
# verificar_comando hellwal
verificar_comando matugen
#verificar_comando swaync
#verificar_comando syshud

# Notificar cambio de fondo.
notify-send "Cambiando tema" "Aplicando nuevo fondo y actualizando paleta de colores, espera mientras se procesa la imagen..."

swww img "$IMAGEN" --transition-type wipe --transition-fps 60 --transition-duration 0.3 --transition-angle 30 --transition-step 90

# hellwal -i "$IMAGEN"
# wallust run "$IMAGEN"
matugen image "$IMAGEN"
#wal -i "$IMAGEN"

if [[ "$IMAGEN" == *.gif ]]; then
  convert "$IMAGEN[0]" -blur 0x40 ~/.config/wezterm/assets/bg-blurred.png
  convert "$IMAGEN[0]" -contrast -blur 0x40 ~/.config/wezterm/assets/bg-blurred-darker.png
else 
  convert "$IMAGEN" -blur 0x40 ~/.config/wezterm/assets/bg-blurred.png
  convert "$IMAGEN" -brightness-contrast -30x0 -blur 0x40 ~/.config/wezterm/assets/bg-blurred-darker.png

fi

# pkill waybar
# waybar > /dev/null 2>&1 &

#pkill swaync
#swaync > /dev/null 2>&1 &

#pkill syshud
#sleep 0.1
#syshud -p middle-right -o v -W 350 -H 50 -i 25 -t 2 > /dev/null 2>&1 &

notify-send "Tema aplicado" "Wallpaper y paleta de colores actualizando."
